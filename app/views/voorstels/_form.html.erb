    <%= f.label :place %><br />
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.select :time, [['0:30'],
                        ['1:00'],
                        ['1:30'],
                        ['2:00'],
                        ['2:30'],
                        ['3:00'],
                        ['3:30'],
                        ['4:00'],
                        ['4:30'],
                        ['5:00']] %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Stel voor", :class =>'btn btn-medium' %>
  </div>
<% end %>
