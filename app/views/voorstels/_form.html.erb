<%= form_for(@voorstel) do |f| %>
  <% if @voorstel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@voorstel.errors.count, "error") %> prohibited this voorstel from being saved:</h2>

      <ul>
      <% @voorstel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
